                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Year)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OnLoan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoanedToID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoanLength)
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-primary" id="btnCollectionTableGameEdit_@item.ID" data-id="@item.ID" data-toggle="modal" data-target="#editGameModal">Edit</a>

