@model MediaManager.Models.CollectionViewModel

@{
    ViewBag.Title = "Collection";
}

<h2>Collection</h2>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#collectionTableMusicTab" role="tab" data-toggle="tab">
                    <span class="glyphicon glyphicon-music"></span>
                    Music
                </a>
            </li>
            <li>
                <a href="#collectionTableMoviesTab" role="tab" data-toggle="tab">
                    <span class="glyphicon glyphicon-film"></span>
                    Movies
                </a>
            </li>
            <li>
                <a href="#collectionTableGamesTab" role="tab" data-toggle="tab">
                    <span class="glyphicon glyphicon-play-circle"></span>
                    Games
                </a>
            </li>
            <li>
                <a href="#requestTableTab" role="tab" data-toggle="tab">
                    <span class="glyphicon glyphicon-inbox"></span>
                    Requests
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="collectionTableMusicTab">
                <a class="btn btn-primary btnAddItem" id="btnAddMusic" data-toggle="modal" data-target="#addMusicModal">Add Music</a>
                
                <table class="table table-bordered table-striped" id="collectionTableMusic">
                    <thead>
                        <tr>
                            <th>Artist</th>
                            <th>Album Title</th>
                            <th>Year</th>
                            <th>Genre</th>
                            <th>On Loan</th>
                            <th>Loaned To</th>
                            <th>Loan Length</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MusicList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Artist)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AlbumTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Year)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Genre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OnLoan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoanedToID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoanLength)
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-primary" id="btnCollectionTableMusicEdit_@item.ID" data-id="@item.ID" data-toggle="modal" data-target="#editMusicModal">Edit</a>

                                    @if (item.OnLoan == MediaManager.Models.MusicOnLoan.No)
                                    {
                                        <a class="btn btn-primary btnCollectionTableLoanReturn" id="btnCollectionTableMusicLoan_@item.ID" data-id="@item.ID" href="#">Loan</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-primary btnCollectionTableLoanReturn" id="btnCollectionTableMusicReturn_@item.ID" data-id="@item.ID" href="#">Return</a>
                                    }

                                    <a class="btn btn-danger btnCollectionTableRemove" id="btnCollectionTableMusicRemove_@item.ID" data-id="@item.ID" href="#">Remove</a>
                                    <a class="btn btn-primary btnCollectionTableRequest" id="btnCollectionTableMusicRequest_@item.ID" data-id="@item.ID" href="#">Request</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="collectionTableMoviesTab">
                <a class="btn btn-primary btnAddItem" id="btnAddMovie" data-toggle="modal" data-target="#addMovieModal">Add Movie</a>

                <table class="table table-bordered table-striped" id="collectionTableMovies">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Genre</th>
                            <th>Year</th>
                            <th>Length</th>
                            <th>Format</th>
                            <th>On Loan</th>
                            <th>Loaned To</th>
                            <th>Loan Length</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
